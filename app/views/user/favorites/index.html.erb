<div class= "container mt-5">
 <div class="row justify-content-center">
  <div class="col-md-8">
   <div class="card">
     <div class="card-header">
      <h1 class="h3 mb-o">お気に入り一覧</h1>
      <table class= "table mt-5">
      <thead class="thead-light">
       <tr>
        <th>音楽名</th>
        <th>歌手名</th>
        <th>ジャンル名</th>
        <th>投稿者</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
        <% @favorites.each do |favorite| %>
       <tr>
        <td><%= link_to favorite.music.music_name,music_path(favorite.music) %></td>
        <td><%= favorite.music.singer %></td>
        <td><%= favorite.music.music_genre.genre_name %></td>
        <td><%= favorite.music.user.name %></td>
       </tr>
       <% end %>
      </tbody>
    </table>
    <%= paginate @favorites %>
   </div>
   </div>
  </div>
 </div>
</div>