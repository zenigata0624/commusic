 <% if music.favorited_by?(current_user) %>
    <p><%= link_to music_favorite_path(music.id, music.favorites.find_by(user_id: current_user.id)),method: :delete  do %>
     ♥<%= music.favorites.count %>
       <% end %>
    </p>
     <% else %>
    <p><%= link_to music_favorite_path(music.id),method: :post do %>
       ♡<%= music.favorites.count %>
       <% end %>
    </p>
<% end %>