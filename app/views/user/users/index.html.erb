<div class= "container mt-5">
 <div class="row justify-content-center">
  <div class="col-md-8">
   <div class="card">
     <div class="card-header">
      <h1 class="h3 mb-o">User一覧</h1>
      <table class= "table mt-5">
      <thead class="thead-light">
       <tr>
        <th>image</th>
        <th>名前</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <%@users.each do|user| %>
        <tr>
         <td><%= link_to image_tag(user.get_profile_image(100,100)) ,user_path(user.id) %></td>
         <td><%= link_to user.name ,user_path(user.id) %></td>
         <td>フォロー数: <%= user.followings.count %></td>
         <td>フォロワー数: <%= user.followers.count %></td>
          <% if user != current_user %>
           <% if current_user.following?(user) %>
            <td><%= link_to "フォローを外す", user_relationships_path(user.id),method: :delete %></td>
           <% else %>
            <td><%= link_to "フォローをする", user_relationships_path(user.id) , method: :post %></td>
           <% end %>
       　　 <% end %>
        </tr>
       <%end %>
      </tbody>
    </table>
    <%= paginate @users %>
   </div>
   </div>
  </div>
 </div>
</div>