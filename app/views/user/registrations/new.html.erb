<div class= "container mt-5">
 <div class="row justify-content-center">
  
  <div class="col-md-8">
    <h1 class="h3 mb-o">sign_Up</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>
  
    <div class="form-group">
     <%= f.label :email ,"Mail",class: "h5"%>
     <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="form-group">
     <%= f.label :name,"Name",class: "h5" %>
     <%= f.text_field :name ,class: "form-control"%>
    </div>

    <div class="form-group">
     <%= f.label :password,"Password",class: "h5"%>
     <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> 文字以上)</em>
     <% end %><br />
     <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
     <%= f.label :password_confirmation ,"Password(再確認)",class: "h5"%><br />
     <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
     <%= f.submit "Sign up",class: "btn btn-primary"%>
    </div>
     <% end %>
     
   <%= render "user/shared/links" %>
  </div>
  
 </div>
</div>
