<div class="col-md-9">
 <div class="card bg-light" style="margin-top: 20px;">
  <div class="card-body">
    <table class="table">
     <h3>コメント欄</h3>
      <tbody>
          <% music.music_comments.each do |music_comment| %>
            <tr>
             <td>
              <div class="media">
              <%= image_tag music_comment.user.get_profile_image(100, 100), class: "mr-3" %>
               <div class="media-body">
                <h5 class="mt-0,style">名前　<%= link_to music_comment.user.name, user_path(music_comment.user.id) %></h5>
                <%= music_comment.comment %>
                <% if music_comment.user == current_user %>
                <%= link_to "削除", music_music_comment_path(music_comment.music, music_comment), class: "btn btn-danger", remote: true, method: :delete %>
                <% end %>
               </div>
              </div>
             </td>
            </tr>
          <% end %>
        </tbody>
    　</table>
       <% if current_user.nil? || current_user.guest? %>
        <p>ゲストユーザーはコメントできません。</p>
       <% else %>
       <div class="mt-3">
       <%= form_with model: [music, music_comment], local: false do |f| %>
       <div class="form-group">
       <%= f.text_area :comment, rows: '6', class: 'form-control' %>
       </div>
       <%= f.submit "送信", class: "btn btn-primary" %>
       <% end %>
      </div>
    <% end %>
  </div>
 </div>
</div>