<h3 class="mt-3">New Music</h3>
<%= form_with model: Music.new do |f| %>

  <div class="form-group">
    <%= f.label :music_name, "音楽名", class: "h5" %>
    <%= f.text_field :music_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :singer, "歌手名", class: "h5" %>
    <%= f.text_field :singer, class: "form-control" %>
  </div>
 
  <div class="form-group">
  <%= f.label :genre_name, "ジャンル名", class: "h5" %>
  <%= f.select :music_genre_id,
    options_for_select(@music_genres.map { |g| [g.genre_name, g.id] },
      selected: @music.music_genre_id),
    {}, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :music_notes, "説明文", class: "h5" %>
    <%= f.text_field :music_notes, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :music_image, "画像ファイル", class: "h5" %>
    <%= f.file_field :music_image, class: "form-control" %>
  </div>

  <p><%= f.submit '投稿', class: "btn btn-primary" %></p>
<% end %>