<div class= "container mt-5">
 <div class="row justify-content-center">
  <div class="col-md-8">
   
   <%= render 'admin/shared/flash_messages' %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <h3 class=" mb-o">Admin Log in</h3>
   
   <div class="form-group">
     <%= f.label :email ,"mail",class: "h5" %>
     <%= f.email_field :email,class: "form-control",autofocus: true, autocomplete: "email" %>
   </div>
  
   <div class="form-group">
     <%= f.label :password ,"password",class: "h5"%>
     <%= f.password_field :password ,class: "form-control", autocomplete: "current-password" %>
   </div>

    <% if devise_mapping.rememberable? %>
   <div class="form-group">
     <%= f.check_box :remember_me %>
     <%= f.label :remember_me %>
   </div>
    <% end %>
    
   <p><%= f.submit "Log in",class: "btn btn-primary"%></p>
      <% end %>
      
   <%= render "admin/shared/links" %>
   
  </div>
 </div>
</div>