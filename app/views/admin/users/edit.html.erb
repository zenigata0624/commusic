
 <h3 class="mt-3">Edit User</h3>
 <%= form_with model: @user ,url: admin_user_path(@user.id), method: :patch  do |f| %>

  <div class="form-group">
    <%= f.label :name, "名前", class: "h5" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "自己紹介文", class: "h5" %>
    <%= f.text_field :introduction, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.radio_button :flag, :true, {class: "h5"} %>
    <%= f.label :flag, "退会" %>
    <%= f.radio_button :flag, :false %>
    <%= f.label :flag, "有効" %>
  </div>

  <div class="form-group">
    <%= f.label :profile_image, "画像ファイル", class: "h5" %>
    <%= f.file_field :profile_image, class: "form-control" %>
  </div>

  <p><%= f.submit '変更', class: "btn btn-primary" %></p>
<% end %>