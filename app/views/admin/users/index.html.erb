
<div class= "container mt-5">
 <div class="row justify-content-center">
  <div class="col-md-8 text-center">
   <%= render 'admin/shared/flash_messages' %>
   <h3 class=" mt-3">Users</h3>
   <table class= "table mt-5">
    <thead class="thead-light">
    <tr>
     <th>Image</th>
     <th>Name</th>
    </tr>
    </thead>
    <tbody>
     <%@users.each do|user| %>
     <tr>
      <td><%= link_to image_tag(user.get_profile_image(100,100)) ,admin_user_path(user.id) %></td>
      <td><%= link_to user.name ,admin_user_path(user.id) %></td>
     </tr>
      <% end %>
     </tbody>
    </table>
    <div class= "paginate"> 
    <%= paginate @users %>
    </div>
   </div>
   </div>
  </div>
 </div>
</div>