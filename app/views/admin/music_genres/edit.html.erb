<div class= "container mt-5">
 <div class="row justify-content-center">
  
  <div class="col-md-8 text-center ">
   <%= render 'admin/shared/flash_messages' %>
     <h3 class="mt-3">Genre編集</h3>
    <%= form_with model:@music_genre, url:admin_music_genre_path(@music_genre),method: :patch, local:true do |f| %>
   <table class= "table mt-5">
    <thead class="thead-light">
      <tr>
        <th>ジャンル名</th>
        <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <tr>
        <td><%= f.text_field:genre_name %></td>
        <td><%= f.submit '変更を保存',class: 'btn btn-success' %></td>
      </tr>
      <% end %>
     </tbody>
   </table>
  </div>
  
 </div>
</div>