<div class="container mt-5">
 <div class="row justify-content-center">
  <div class="col-md-8 text-center ">
  <%= render 'admin/shared/flash_messages' %>
   <h3 class="mb-5">Genre一覧・追加</h3>
    <%= form_with model: @music_genre, url: admin_music_genres_path, method: :post, local: true do |f| %>
    <div class= "mb-5">
     <%= f.text_field :genre_name, placeholder: "ジャンル名" %>
     <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
    <% end %>
    <table class="table table-hover table-inverse mt-3">
     <thead class="thead-light">
      <tr>
       <th>ジャンル</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
     <% @music_genres.each do |music_genre| %>
      <tr>
       <td><%= music_genre.genre_name %></td>
       <td><%= link_to '編集する', edit_admin_music_genre_path(music_genre), class: 'btn btn-success' %></td>
       <td><%= link_to '削除する', admin_music_genre_path(music_genre), method: :delete, class: 'btn btn-danger', data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
     <% end %>
     </tbody>
    </table>
  </div>
  </div>
</div>